<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="18dp"
    android:paddingRight="18dp"
    tools:context=".VerificaEmail">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:drawablePadding="12dp"
        android:fontFamily="@font/chela_one"
        android:padding="8dp"
        android:text="Verifica tu correo"
        android:textAlignment="textStart"
        android:textColor="#fff"
        android:textSize="25sp"
        android:textStyle="normal" />

    <Button
        android:id="@+id/btn_register"
        style="@style/Base.TextAppearance.AppCompat.Body1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/background_signup"
        android:clickable="true"
        android:padding="16dp"
        android:text="Ya verifiquÃ© mi correo"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="18sp" />
    <Button
        android:id="@+id/btn_cancelar"
        style="@style/Base.TextAppearance.AppCompat.Body1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/background_signphone"
        android:clickable="true"
        android:padding="16dp"
        android:text="Cancelar"
        android:textAllCaps="false"
        android:textColor="#000"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/lbl_text_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingTop="5dp"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="20dp" />

</LinearLayout>